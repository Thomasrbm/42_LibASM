section .text
    global _ft_strcmp

_ft_strcmp:
    xor rcx, rcx            ; Utilise rcx pour l'index, rax servira au retour

.while:
    mov al, byte [rdi + rcx] ; Charge 1 SEUL octet de s1
    mov dl, byte [rsi + rcx] ; Charge 1 SEUL octet de s2

    cmp al, 0               ; Fin de s1 ?
    je .end
    cmp dl, 0               ; Fin de s2 ?
    je .end
    cmp al, dl              ; Caractères différents ?
    jne .end

    inc rcx                 ; Index suivant
    jmp .while

.end:
    ; On convertit les octets (8-bit) en 64-bit pour la soustraction
    movzx rax, al           ; movzx remplit le reste de rax avec des 0
    movzx rdx, dl
    sub rax, rdx            ; Soustraction propre (ex: 'q' - 'o')
    ret